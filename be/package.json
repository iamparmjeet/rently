{
  "name": "be",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "lint": "biome lint .",
    "lint:check": "biome check .",
    "lint:fix": "biome format --write",
    "typecheck": "tsc --noEmit",
    "generate:betterauth": "bunx @better-auth/cli generate --config /src/lib/auth-cli.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:migrate:local": "wrangler d1 migrations apply rently --local",
    "db:migrate:remote": "wrangler d1 migrations apply rently",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "better-auth": "^1.3.9",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.6",
    "hono-pino": "^0.10.2",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.9",
    "@biomejs/biome": "^2.2.4",
    "@cloudflare/workers-types": "^4.20250910.0",
    "@types/node": "^24.3.1",
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.4.0"
  }
}
